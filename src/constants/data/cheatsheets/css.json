[
  {
    "title": "CSS Cheatsheet",
    "sections": [
      {
        "subtitle": "Useful snippets",
        "snippets": [
          {
            "description": "No Scroll bar",
            "code": "::-webkit-scrollbar {\n    display: none;\n}"
          },
          {
            "description": "Remove type=\"number\" the arrow at the end",
            "code": "input::-webkit-outer-spin-button,\ninput::-webkit-inner-spin-button {\n    -webkit-appearance: none;\n}"
          },
          {
            "description": "Line clamp",
            "code": "display: -webkit-box;\n-webkit-line-clamp: 3;\n-webkit-box-orient: vertical;\noverflow: hidden;"
          },
          {
            "description": "Full bleed",
            "code": "box-shadow: 0 0 0 1000vmax black;\nclip-path: inset(0 -100vmax);"
          },
          {
            "description": "Transition to height auto",
            "code": ".wrapper {\n    display: grid;\n    grid-template-rows: 0fr;\n    transition: grid-template-rows 0.5s;\n}\n.wrapper.is-open {\n    grid-template-rows: 1fr;\n}\n.inner {\n    overflow: hidden;\n}"
          },
          {
            "description": "Fade Gradients",
            "code": "background: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(0, 0, 0, 1));"
          },
          {
            "description": "Grid background",
            "code": "background-size: 40px 40px;\nbackground-image: linear-gradient(to right, grey 1px, transparent 1px),\n                 linear-gradient(to bottom, grey 1px, transparent 1px);"
          },
          {
            "description": "Dotted background",
            "code": "background-size: 40px 40px;\nbackground-image: radial-gradient(circle, #000000 1px, rgba(0, 0, 0, 0) 1px);"
          },
          {
            "description": "Note: apply overflow to flex-item might shrink it. Fix: flex-shrink:0",
            "code": "flex-shrink: 0;"
          }
        ]
      }
    ]
  }
]
